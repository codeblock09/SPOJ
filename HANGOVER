#include<iostream>
using namespace std;
int main()
{
    while(1)
    {
        float c=0;    cin>>c;
        if(c==0.00)
            break;
        float sum=0;
        float i=1,t=0;
        while(sum<=c)
        {
            t=(float)1/(i+1);
            sum+=t;
            i++;
        }
        cout<<i-1<<" card(s)"<<endl;
    }
    return 0;
}
